# **************************************************************************** #
#                                     VARS                                     #
# **************************************************************************** #

# COLORS
NOCOL=\033[0m
RED=\033[1;31m
YEL=\033[1;33m
ORG=\033[0;33m
GRN=\033[1;32m
DGRAY=\033[1;30m
BLU=\033[1;34m

# OS
UNAME_S := $(shell uname -s)

# **************************************************************************** #
#                                   PROGRAM                                    #
# **************************************************************************** #

NAME = philo

# **************************************************************************** #
#                                   COMPILER                                   #
# **************************************************************************** #

MAKE = make

CC = gcc

CFLAGS += -Wall -Wextra -Werror #-fsanitize=thread

# **************************************************************************** #
#                                    FLAGS                                     #
# **************************************************************************** #

CFLAGS += -I ./inc

CCFLAGS += -pthread

# **************************************************************************** #
#                                    PATHS                                     #
# **************************************************************************** #

SRC_PATH = src
OBJ_PATH = obj
INC_PATH = inc

# **************************************************************************** #
#                                   SOURCES                                    #
# **************************************************************************** #

SRC_FILES =	main.c			handle_args.c			utils.c			\
			print_msg.c		philo_life.c			philo_utils.c

SRC = $(addprefix $(SRC_PATH)/, $(SRC_FILES))

OBJ_FILES = $(SRC_FILES:%.c=%.o)

OBJ = $(addprefix $(OBJ_PATH)/, $(OBJ_FILES))

# **************************************************************************** #
#                                    RULES                                     #
# **************************************************************************** #

.PHONY: all clean fclean re

# all
all: $(NAME)

# name
$(NAME): $(OBJ)
	$(CC) $(CFLAGS) $^ -o $@ $(CCFLAGS)

# objs
$(OBJ_PATH)/%.o: $(SRC_PATH)/%.c | $(OBJ_PATH)
	$(CC) $(CFLAGS) -c $< -o $@

# obj path
$(OBJ_PATH):
	mkdir -p $(OBJ_PATH) 2> /dev/null

# clean
clean:
	rm -rf $(OBJ_PATH)

# fclean
fclean: clean
	rm -rf $(NAME)

# re
re: fclean all
